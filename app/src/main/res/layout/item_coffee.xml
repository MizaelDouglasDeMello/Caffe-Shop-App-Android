<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCoffee"
        android:layout_width="140dp"
        android:layout_height="128dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/_coff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        app:srcCompat="@drawable/banner_promo" />


    <TextView
        android:id="@+id/tvCoffeeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sora_semibold"
        android:text="Ola Mundo!!"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgCoffee"
        app:layout_constraintStart_toStartOf="@+id/imgCoffee"
        app:layout_constraintTop_toBottomOf="@+id/imgCoffee" />

    <TextView
        android:id="@+id/tvCoffeeDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sora"
        android:text="Ola Mundo!!"
        android:textColor="@color/lighter"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvCoffeeName"
        app:layout_constraintStart_toStartOf="@+id/tvCoffeeName"
        app:layout_constraintTop_toBottomOf="@+id/tvCoffeeName" />

    <TextView
        android:id="@+id/tvCoffeePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/sora_semibold"
        android:text="R$ 0,00"
        android:textColor="#050505"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/tvCoffeeDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvCoffeeDescription" />

    <ImageView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_config"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCoffeePrice"
        app:layout_constraintEnd_toEndOf="@+id/tvCoffeeDescription"
        app:layout_constraintTop_toTopOf="@+id/tvCoffeePrice"
        app:srcCompat="@drawable/baseline_add_24" />


</androidx.constraintlayout.widget.ConstraintLayout>